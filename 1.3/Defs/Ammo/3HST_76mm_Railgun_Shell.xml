		<defName>AmmoSet_3HST76mmRG</defName>
		<label>3HST 76mm heavy railgun</label>
		<ammoTypes>
			<Ammo_3HST76mmRG_Steel>Projectile_3HST76mmRG_Steel</Ammo_3HST76mmRG_Steel>
